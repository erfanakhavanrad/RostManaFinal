<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <!--  TODO: change Register and Login Mobile number and password
      -->


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_check"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:src="@drawable/ic_baseline_check_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.994"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <ImageView
            android:id="@+id/image_cancel"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:src="@drawable/ic_baseline_arrow_back_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.002"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_register"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="2"
            android:background="@color/lGreen2OnSelected"
            android:fontFamily="@font/iransans"
            android:text="ثبت نام" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_login"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="2"
            android:background="@color/lGreen2"
            android:fontFamily="@font/iransans"
            android:text="ورود" />
    </LinearLayout>

    <TextView
        android:id="@+id/txt_forgetPassword_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:fontFamily="@font/iransans"
        android:text="لطفا شماره موبایل خود را \n برای ارسال رمز جدید وارد کنید"
        android:textSize="17sp"
        android:visibility="gone" />

    <EditText
        android:id="@+id/etxt_forgetPassword_label"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/iransans"
        android:gravity="center"
        android:hint="برای مثال: 09XXXXXXXXX"
        android:inputType="textEmailAddress"
        android:textSize="15sp"
        android:visibility="gone" />

    <Button
        android:id="@+id/btn_forgetPassword_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/lGreen2"
        android:fontFamily="@font/iransans"
        android:gravity="center"
        android:text="تایید"
        android:visibility="gone" />

    <TextView
        android:id="@+id/txt_fname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:fontFamily="@font/iransans"
        android:text="نام"
        android:textSize="17sp"
        android:visibility="gone" />

    <EditText
        android:id="@+id/etxt_fname"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/iransans"
        android:gravity="center"
        android:hint="نام خود را وارد کنید"
        android:textSize="15sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/txt_lname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:fontFamily="@font/iransans"
        android:text="نام خانوادگی"
        android:textSize="17sp"
        android:visibility="gone" />

    <EditText
        android:id="@+id/etxt_lname"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/iransans"
        android:gravity="center"
        android:hint="نام خانوادگی خود را وارد کنید"
        android:textSize="15sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/txt_phonenumber_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:fontFamily="@font/iransans"
        android:text="شماره موبایل"
        android:textSize="17sp" />

    <EditText
        android:id="@+id/etxt_phonenumber_login"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/iransans"
        android:gravity="center"
        android:hint="شماره موبایل خود را وارد کنید"
        android:inputType="textEmailAddress"
        android:textSize="15sp" />
    <!--   sddasdadsad -->


    <TextView
        android:id="@+id/txt_password_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:fontFamily="@font/iransans"
        android:text="کلمه عبور"
        android:textSize="17sp" />

    <EditText
        android:id="@+id/etxt_password_login"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/iransans"
        android:gravity="center"
        android:hint="کلمه عبور خود را وارد کنید"
        android:inputType="textPassword"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/txt_forgetPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/iransans"
        android:text="فراموشی کلمه عبور"
        android:textStyle="bold" />
    <!--    phone-->
    <TextView
        android:id="@+id/txt_phonenumber_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:fontFamily="@font/iransans"
        android:text="شماره موبایل"
        android:textSize="17sp"
        android:visibility="gone" />

    <EditText
        android:id="@+id/etxt_phonenumber_register"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/iransans"
        android:gravity="center"
        android:hint="شماره موبایل خود را وارد کنید"
        android:inputType="textEmailAddress"
        android:textSize="15sp"
        android:visibility="gone" />
    <!-- عسثق-->
    <TextView
        android:id="@+id/txt_password_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:fontFamily="@font/iransans"
        android:text="رمز عبور"
        android:textSize="17sp"
        android:visibility="gone" />

    <EditText
        android:id="@+id/etxt_password_register"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/iransans"
        android:gravity="center"
        android:hint="رمز عبور خود را وارد کنید"
        android:inputType="textEmailAddress"
        android:textSize="15sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/txt_cPassword_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:fontFamily="@font/iransans"
        android:text="تایید کلمه عبور"
        android:textSize="17sp"
        android:visibility="gone" />

    <EditText
        android:id="@+id/etxt_cPassword_register"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/iransans"
        android:gravity="center"
        android:hint="کلمه عبور خود را دوباره وارد کنید"
        android:inputType="textPassword"
        android:textSize="15sp"
        android:visibility="gone" />


</LinearLayout>