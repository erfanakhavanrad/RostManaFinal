<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:gravity="left"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/image_seasonal"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_marginRight="10dp"
                app:srcCompat="@drawable/ic_seasonalflowers" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="right"

            >

            <ImageView
                android:id="@+id/image_cactus"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_gravity="right"
                android:layout_marginLeft="10dp"
                app:srcCompat="@drawable/ic_cactus" />

        </LinearLayout>

    </LinearLayout>


    <ImageView

        android:id="@+id/image_greenLeaf"
        android:layout_width="360dp"
        android:layout_height="174dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        app:srcCompat="@drawable/ic_greenleaf" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:gravity="left"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/image_organic"
                android:layout_width="180dp"
                android:layout_height="185dp"
                android:layout_marginRight="10dp"
                app:srcCompat="@drawable/ic_organic" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="right"
            >
            <ImageView
                android:id="@+id/image_shrub"
                android:layout_width="180dp"
                android:layout_height="185dp"
                android:layout_gravity="right"
                android:layout_marginLeft="10dp"
                app:srcCompat="@drawable/ic_shrub" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>