<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/fragmentHome">

    <fragment
        android:id="@+id/firstFragment2"
        android:name="com.example.rostmanafinal.Fragments.FirstFragment"
        android:label="FirstFragment"
        tools:layout="@layout/fragment_first"
        />
    <fragment
        tools:layout="@layout/fragment_second"
        android:id="@+id/secondFragment2"
        android:name="com.example.rostmanafinal.Fragments.SecondFragment"
        android:label="SecondFragment" />
    <fragment
        tools:layout="@layout/fragment_third"
        android:id="@+id/thirdFragment2"
        android:name="com.example.rostmanafinal.Fragments.ThirdFragment"
        android:label="ThirdFragment" />
    <fragment
        android:id="@+id/fragment_Plant_Details"
        android:name="com.example.rostmanafinal.Fragments.Fragment_Plant_Details"
        android:label="Fragment_Plant_Details" />
    <fragment
        android:id="@+id/fragmentViewPagerTabbed"
        android:name="com.example.rostmanafinal.Fragments.FragmentViewPagerTabbed"
        android:label="FragmentViewPagerTabbed" >
        <action
            android:id="@+id/action_fragmentViewPagerTabbed_to_fragmentScanQR"
            app:destination="@id/fragmentScanQR" />
        <action
            android:id="@+id/action_fragmentViewPagerTabbed_to_fragmentEnterSerialNumber"
            app:destination="@id/fragmentEnterSerialNumber" />
    </fragment>
    <fragment
        android:id="@+id/fragmentHome"
        android:name="com.example.rostmanafinal.Fragments.FragmentHome"
        android:label="FragmentHome" >
        <action
            android:id="@+id/action_fragmentHome_to_fragmentViewPagerTabbed"
            app:destination="@id/fragmentViewPagerTabbed" />
    </fragment>
    <fragment
        android:id="@+id/fragmentEnterSerialNumber"
        android:name="com.example.rostmanafinal.Fragments.FragmentEnterSerialNumber"
        android:label="FragmentEnterSerialNumber" />
    <fragment
        android:id="@+id/fragmentScanQR"
        android:name="com.example.rostmanafinal.Fragments.FragmentScanQR"
        android:label="FragmentScanQR" />
</navigation>